:javascript
  %script(src= 'https://maps.googleapis.com/maps/api/js?key=AIzaSyCkgRQkTMwdpHYn-VaIAqasuF6hhTEwEEM&callback=initMap')
  var map;
  var myLatLng = {lat: 40.7454474, lng: -73.952307};
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 40.7354474, lng: -73.9711897},
      zoom: 12,
      scrollwheel: false
    });

    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      title: 'Hello World!'
    });
  }
