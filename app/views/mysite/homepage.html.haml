  .contact
    .icon
      %i.fa.fa-microphone
    .contact-title Contact
    .contact-subtitle Can I get yo numba
    .contact-box
      .map{id:'map'}
      .form
        = simple_form_for :message, url: message_path do |f|
          .left
            .message.name-input
              = f.input :name, placeholder: 'Name'
            .message.email-input
              = f.input :email, placeholder: 'Email'
          .right
            .message.text
              = f.input :text, as: :text, placeholder: "Write me a message. I promise on Syracuse Basketball that I'll respond!"
          .submit Send Message

    .socials
      .twitter
        %i.fa.fa-twitter
      .github
        %i.fa.fa-github
      .linkedin
        %i.fa.fa-linkedin

